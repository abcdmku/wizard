{
  "name": "@wizard/dag-core",
  "version": "0.1.0",
  "private": true,
  "description": "Core types, adapters, and utilities for visualizing Wizard step DAGs",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --watch --format esm,cjs --dts",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "peerDependencies": {
    "@wizard/core": "*"
  },
  "devDependencies": {
    "@wizard/core": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "zod": "^3.23.8"
  }
}
