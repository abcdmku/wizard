{
  "name": "@wizard/docs",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "pnpm run build:api && next build",
    "build:api": "pnpm run clean:api && pnpm run typedoc",
    "build:docs": "next build",
    "start": "next start",
    "clean:api": "rimraf public/api",
    "typedoc": "typedoc --tsconfig ./tsconfig.typedoc.json --options typedoc.json",
    "typedoc:watch": "pnpm run typedoc -- --watch",
    "prebuild": "pnpm run validate:core",
    "postbuild": "pnpm run validate:build",
    "validate:core": "pnpm run --filter @wizard/core build",
    "validate:react": "pnpm run --filter @wizard/react build",
    "validate:build": "node ./scripts/validate-build.mjs",
    "check": "pnpm run check:links && pnpm run check:examples && pnpm run check:api",
    "check:api": "pnpm run typedoc -- --dry-run",
    "check:links": "echo 'Link check not yet configured'",
    "check:examples": "node ./scripts/check-examples-build.mjs",
    "preview": "pnpm run build && pnpm run start"
  },
  "dependencies": {
    "@wizard/core": "workspace:*",
    "@wizard/react": "workspace:*",
    "lucide-react": "^0.544.0",
    "next": "^14.2.0",
    "nextra": "^4",
    "nextra-theme-docs": "^4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "rehype-pretty-code": "^0.14.0",
    "remark-gfm": "^4.0.0",
    "rimraf": "^6.0.1",
    "shiki": "^1.0.0",
    "tailwindcss": "^3.4.17",
    "typedoc": "^0.28.0",
    "typedoc-plugin-mdn-links": "^5",
    "typedoc-plugin-missing-exports": "^4"
  }
}