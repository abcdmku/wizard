{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "incremental": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["@types/react", "@types/react-dom", "@types/node"],
    "isolatedModules": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.js",
    "mdx-components.tsx",
    "pages/**/*.mdx",
    "scripts/**/*.mjs",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts"
  ],
  "exclude": ["dist", "node_modules", "out", "public/typedoc"]
}
